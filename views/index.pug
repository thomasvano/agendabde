extends ./layout.pug

block style
    link(rel='stylesheet', href='/css/landing.css', media='screen', charset='utf-8')

block scripts
    script(type='text/javascript', src='/vendor/angular/angular.min.js')
    script(type='text/javascript', src='/vendor/ngSmoothScroll/angular-smooth-scroll.min.js')
    script(type='text/javascript', src='/vendor/skrollr/dist/skrollr.min.js')
    script(type='text/javascript').
        var app = angular.module('landing', ['smoothScroll']);


block content
    div(ng-app='landing')
        section#intro.intro: .intro-overlay: .container
            header.header: .container
                a.logo(href='/')
                    img(src='/images/logo.png', alt='Agenda BDE')
                nav.main-nav
                    ul.links
                        li: a.active(href='#', scroll-to='intro') Home
                        li: a(href='#', scroll-to='features') Features
                        li: a(href='#', scroll-to='about') About
            .intro-headline
                h1 Agenda BDE
                h2 lets you and your team vote on a date to host an event
            .intro-actions
                a#schedule-event.button.primary(href='/new') Cr√©er un Event
                    span.free-label
                a#view-demo.button(href='/example') Voir la liste des Events
            .intro-shots
                .desktop
                .mobile
        section#features.landing-section: .container
                h3 Features
                h4 Agenda BDE makes collaborating with team quick and easy
                .features
                    .feature
                        .image: img(src='/images/landing/share.png', width='48')
                        h5 Share
                        p Create a page for your upcoming event and share it with your team.
                    .feature
                        .image: img(src='/images/landing/discuss.png', width='48')
                        h5 Discuss
                        p Discuss details of the event with your team right on the event page.
                    .feature
                        .image: img(src='/images/landing/vote.png', width='48')
                        h5 Vote
                        p Let everyone know which dates best work for you and find a common date to host your event.
                .seperator#about
                h3 About
                h4 Frequently Asked Questions
                .questions-section
                    .questions-col
                        .question
                            h6 Who made this?
                            p Rallly was created by 
                                a(href='') Your mom
                                | .
                        .question
                            h6 Is it free?
                            p Yes, Agenda BDE is completely free to use.
                        .question
                            h6 Why did you create Agenda BDE?
                            p
                                | For you.
                    .questions-col
                        .question
                            h6 This is great, is there anything I can do to help out?
                            p
                                | Yes, Use it
                                | !
                        .question
                            h6 Where can I submit a feature request?
                            p
                                | NOWHERE !
                                | .
        section#share.landing-section.bottom: .container
            .seperator


